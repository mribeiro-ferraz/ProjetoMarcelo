
@{
    ViewData["Title"] = "Presença";
}

@model Convidados
<div class="pt-4">
    <div class="card container col-md-8 col-sm-8 col-lg-8" >
        <div class="card-header card-header-info">
            <h4 class="card-title">Confirmar Presença</h4>
        </div>
        <div class="card-body col-md-12 col-sm-12 col-lg-12">
            <form asp-controller="Home" asp-action="Convidados">
                <div class="form-group pt-4">
                    <label for="exampleInputEmail1" style="font-weight: bold">Nome</label>
                    <input asp-for="Nome" class="form-control" id="nomeConvidado" required placeholder="Digite seu nome">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1" style="font-weight: bold">CPF</label>
                    <input asp-for="Cpf" class="form-control" id="cpfConvidado" minlength="11" required placeholder="Digite seu CPF">
                </div>
                <div class="form-group">
                    <label for="exampleFormControlTextarea1" style="font-weight: bold">Deixa uma mensagem para o Marcelo! ⬇</label>
                    <textarea asp-for="Mensagem" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                </div>
                <div class="form-group">
                    <label style="font-weight: bold">Você vai levar alguem com você?</label>
                    <a class="btn btn-sm btn-success" data-toggle="collapse" href="#collapseExample" aria-expanded="false" aria-controls="collapseExample">Sim</a>
                </div>
                <div class="form-check mb-4 collapse" id="collapseExample">
                    <label class="form-check-label">
                        <input class="form-check-input" type="checkbox" value="">
                        Filhos(as)
                        <span class="form-check-sign" data-toggle="collapse" href="#collapseExample2" aria-expanded="false" aria-controls="collapseExample2">
                            <span class="check"></span>
                        </span>
                    </label>
                    <label class="form-check-label" style="margin-left: 20px">
                        <input class="form-check-input" type="checkbox" value="">
                        Cônjuge
                        <span class="form-check-sign">
                            <span class="check"></span>
                        </span>
                    </label>
                    <div class="form-group collapse" id="collapseExample2">
                        <div class="form-group pt-4">
                            <label for="exampleInputEmail1" style="font-weight: bold">Nome</label>
                            <input asp-for="Nome" class="form-control" id="nomeConvidado" required placeholder="Digite seu nome">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1" style="font-weight: bold">CPF</label>
                            <input asp-for="Cpf" class="form-control" id="cpfConvidado" minlength="11" required placeholder="Digite seu CPF">
                        </div>
                        <div class="form-group">
                            <label for="exampleFormControlTextarea1" style="font-weight: bold">Deixa uma mensagem para o Marcelo! ⬇</label>
                            <textarea asp-for="Mensagem" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-info">Enviar</button>
            </form>
        </div>
    </div>
</div>
